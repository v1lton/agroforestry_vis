<h1>Canvas</h1>

<div data-controller="canvas">

  <% @species.each do |species| %>
    <div>
      <%= species.common_names.first.common_name %>
      <button data-action="canvas#addSpecies"
              data-canvas-species-name-param="<%= species.name%>"
              data-canvas-species-layer-param="<%= species.layer %>"
              data-canvas-species-start-crop-year-param="<%= species.start_crop_time %>"
              data-canvas-species-end-crop-year-param="<%= species.end_crop_time %>"
      >
        +
      </button>
    </div>
  <% end %>

  <div data-canvas-target="canvasContainer">
  </div>
</div>
