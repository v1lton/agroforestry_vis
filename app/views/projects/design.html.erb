                 data-species-id="<%= species.id %>"
                 data-species-name="<%= species.scientific_name %>"
                 data-action="click->canvas#addSpecies"
                 data-canvas-name-param="<%= species.name%>"
                 data-canvas-layer-param="<%= species.layer %>"
                 data-canvas-spacing-param="<%= species.spacing %>"
                 data-canvas-start-param="<%= species.start_crop_time %>"
                 data-canvas-end-param="<%= species.end_crop_time %>">
              <div class="d-flex align-items-center">
