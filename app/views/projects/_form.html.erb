<%= form_with(model: project, class: "needs-validation") do |form| %>
  <% if project.errors.any? %>
    <div class="alert alert-danger mb-4">
      <h4 class="alert-heading"><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h4>
      <ul class="mb-0">
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, "Título", class: "form-label fw-bold" %>
    <%= form.text_field :title, class: "form-control form-control-lg", placeholder: "Título do projeto" %>
  </div>

  <div class="row mb-4">
    <div class="col-md-6">
      <%= form.label :width, "Largura", class: "form-label fw-bold" %>
      <%= form.number_field :width, class: "form-control", placeholder: "Largura em metros" %>
    </div>
    <div class="col-md-6">
      <%= form.label :height, "Altura", class: "form-label fw-bold" %>
      <%= form.number_field :height, class: "form-control", placeholder: "Altura em metros" %>
    </div>
  </div>

  <div class="mb-4">
    <%= form.label :species_ids, "Selecionar espécies do SAF", class: "form-label fw-bold" %>
    <div class="card">
      <div class="card-body">
        <div class="row">
          <%= form.collection_check_boxes :species_ids, @species, :id, :name do |cb| %>
            <div class="col-md-4 mb-2">
              <div class="form-check">
                <%= cb.check_box(class: "form-check-input") %>
                <%= cb.label(class: "form-check-label") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <%= link_to "Retornar", projects_path, class: "btn btn-outline-secondary" %>
    <%= form.submit "Criar projeto", class: "btn btn-success btn-lg px-4" %>
  </div>
<% end %>
